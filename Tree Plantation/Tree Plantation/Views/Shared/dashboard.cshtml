
@{
    ViewBag.Title = "dashboard";
    Layout = "~/Views/Shared/layout.cshtml";
  

}

@Styles.Render("~/Content/Css/dashboard.css")
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



<div class="sidebar-container">
    <div class="sidebar-logo">
        <a href="#" class="d-flex align-items-center text-light text-decoration-none " id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">

            @if (Session["image"] != null)
            {
                string image = HttpContext.Current.Session["image"].ToString();

                <img src="@Url.Content(image)" alt="" width="32" height="32" class="rounded-circle me-2">
            }
            else
            {
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQNL_ZnOTpXSvhf1UaK7beHey2BX42U6solRA&usqp=CAU" alt="" width="32" height="32" class="rounded-circle me-2">
            }




        <strong>
            @if (Session["name"] != null)
            {
                @HttpContext.Current.Session["name"]
                
            }
        </strong>
        </a>
    </div>

    <ul class="sidebar-navigation ">
        <li class="header">Navigation</li>
        <li>
            <a href="/Donation/SeeDonations" style="text-decoration: none">
                <i class="fa fa-money" aria-hidden="true"></i> Donations
            </a>
        </li>
        <li>
            <a href="/Volunteer/AddVolunteer" style="text-decoration: none">
                <i class="fa fa-plus-square-o" aria-hidden="true"></i> Add Volunteer
            </a>
        </li>
        <li>
            <a href="/Assignment/ArrangeCampaign" style="text-decoration: none">
                <i class="fa fa-plus-square-o" aria-hidden="true"></i> Arrange Campaign
            </a>
        </li>
        <li class="header">Another Menu</li>
        <li>
            <a href="/Admin/ChangeInformation" style="text-decoration: none">
                <i class="fa fa-address-card" aria-hidden="true"></i> Change Information
            </a>
        </li>
        <li>
            <a href="/Admin/ChangePassword" style="text-decoration: none">
                <i class="fa fa-unlock" aria-hidden="true"></i> Change Password
            </a>
        </li>
        <li>
            <a href="/Admin/ChangePicture" style="text-decoration: none">
                <i class="fa fa-camera" aria-hidden="true"></i> Change Picture
            </a>
        </li>
        <li>
            <a href="/Admin/SignOut" style="text-decoration: none">
                <i class="fa fa-sign-out"></i>Sign out
            </a>
        </li>
    </ul>
</div>

<div class="content-container">

   
            @RenderBody()


</div>







