<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;1,300;1,400&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/Css/layout.css")
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">

        <a class="navbar-brand" href="#"><img src="https://w7.pngwing.com/pngs/923/183/png-transparent-tree-planting-eastern-black-walnut-plantation-sowing-tree-leaf-branch-monochrome.png" alt="" width="90px" height="60px"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ms-auto">

                @if (Session["name"] != null)
                {
                    string image = HttpContext.Current.Session["image"].ToString();

                    <a href="/Admin/Index" class="d-flex align-items-center text-light text-decoration-none " alt="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQNL_ZnOTpXSvhf1UaK7beHey2BX42U6solRA&usqp=CAU" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                      

                        <img src="@Url.Content(image)" alt="" width="32" height="32" class="rounded-circle me-2">

                        <strong>
                            @if (Session["name"] != null)
                            {
                                @HttpContext.Current.Session["name"]

                            }
                        </strong>
                    </a>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Login">Login</a>
                    </li>
                }



                <div class="profile">
                    <a href="#" class="d-flex align-items-center  text-decoration-none " id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                <li class="nav-item ">

                    <strong>

                    </strong>
                </li>
                </a>
</div>
        <li class="nav-item ">
            <a class="nav-link" href="#">Contact</a>
        </li>
        <li class="nav-item ">
            <a class="nav-link" href="#">About</a>
        </li>
        </ul>
        </div>
    </nav>


    <div class="content ">
        @RenderBody()
    </div>
</body>
</html>













