
@{
    ViewBag.Title = "ArrangeCampaign";
    Layout = "~/Views/Shared/dashboard.cshtml";
}
@model Tree_Plantation.BModel.ArrangeCampaign
@Styles.Render("~/Content/Css/changepicture.css")


<form action="/Assignment/ArrangeCampaign" method="post">


    <div class="form-group">
        <label for="deadline">Campaign Date</label>
        <input type="date" class="form-control" id="deadline" name="deadline" value="" placeholder="Enter Name">

        <span class="text-danger">@Html.ValidationMessageFor(m => m.deadline)</span>

    </div>
    <div class="form-group">
        <label for="tree_number">Number of Trees</label>
        <input type="number" class="form-control" id="tree_number" name="tree_number" value="" placeholder="Enter Phone">
        <span class="text-danger">@Html.ValidationMessageFor(m => m.tree_number)</span>
    </div>
    <div class="form-group">
        <label for="amount">Money</label>
        <input type="number" class="form-control" id="amount" name="amount" value="" placeholder="Enter Email">
        <span class="text-danger">@Html.ValidationMessageFor(m => m.amount)</span>

    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>
