
@{
    ViewBag.Title = "AddVolunteer";
    Layout = "~/Views/Shared/dashboard.cshtml";
}
@Styles.Render("~/Content/Css/changepicture.css")
@model Tree_Plantation.BModel.AddVolunteer


<form action="/Volunteer/AddVolunteer" method="post">


    <div class="form-group">
        <label for="v_name">Name</label>
        <input type="text" class="form-control" id="v_name" name="v_name" value="" placeholder="Enter Name">

        <span class="text-danger">@Html.ValidationMessageFor(m => m.v_name)</span>

    </div>
    <div class="form-group">
        <label for="v_phone">Phone</label>
        <input type="text" class="form-control" id="v_phone" name="v_phone" value="" placeholder="Enter Phone">
        <span class="text-danger">@Html.ValidationMessageFor(m => m.v_phone)</span>
    </div>
    <div class="form-group">
        <label for="i_email">Email</label>
        <input type="email" class="form-control" id="v_email" name="v_email" value="" placeholder="Enter Email">
        <span class="text-danger">@Html.ValidationMessageFor(m => m.v_email)</span>

    </div>
    <div class="form-group">
        <label for="i_address">Address</label>
        <input type="text" class="form-control" id="v_address" name="v_address" value="" placeholder="Enter Address">
        <span class="text-danger">@Html.ValidationMessageFor(m => m.v_address)</span>
    </div>

    <div class="form-group">
        <label for="n_password">Password</label>
        <input type="password" class="form-control" id="n_password" name="n_password" placeholder="Enter Password">
        <span class="text-danger">@Html.ValidationMessageFor(m => m.n_password)</span>
    </div>

    <div class="form-group">
        <label for="c_password">Confirm Password</label>
        <input type="password" class="form-control" id="c_password" name="c_password" placeholder="Confirm Password">
        <span class="text-danger">@Html.ValidationMessageFor(m => m.c_password)</span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

