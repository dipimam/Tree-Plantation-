
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/layout.cshtml";
}
@model  Tree_Plantation.BModel.AdminLogin

@Styles.Render("~/Content/Css/login.css")


<form action="/Admin/Login" method="post">

    <div class="form-group">
        <label for="a_email">Email</label>
        <input type="email" class="form-control" id="a_email" name="a_email" placeholder="Enter Email">
        <span class="text-danger">
            @Html.ValidationMessageFor(m => m.a_email)
        </span>
    </div>
    <div class="form-group">
        <label for="a_password">Password</label>
        <input type="password" class="form-control" id="a_password" name="a_password" placeholder="Password">
        <span class="text-danger">
            @Html.ValidationMessageFor(m => m.a_password)
            @ViewBag.error
        </span>


    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


